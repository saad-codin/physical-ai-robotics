# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/textbook_db
DATABASE_ECHO=false

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-api-key-here
QDRANT_COLLECTION_NAME=lesson_embeddings

# LLM Configuration (OpenAI or Claude)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
# Alternative: Claude API
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=1536

# Authentication Configuration (Better-Auth)
AUTH_SECRET=your-random-secret-key-change-in-production
AUTH_TRUST_HOST=http://localhost:3000
SESSION_EXPIRY_DAYS=30

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_API_BASE=http://localhost:8000/api

# Backend Configuration
BACKEND_URL=http://localhost:8000
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting (Signup)
RATE_LIMIT_SIGNUP_PER_IP=5
RATE_LIMIT_SIGNUP_WINDOW_MINUTES=60

# Feature Flags
ENABLE_CHATBOT=true
ENABLE_PERSONALIZATION=true
ENABLE_TRANSLATION=true
ENABLE_ANALYTICS=true

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@textbook.local

# Environment
ENVIRONMENT=development
DEBUG=true

# Analytics (optional)
ANALYTICS_ENABLED=false
SENTRY_DSN=

# AWS S3 Configuration (for media storage - optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=textbook-media
AWS_REGION=us-east-1
